@mixin calcColumn-5 {
  min-width: calc(100% * (1/5) - 5px);
}

@mixin calcColumn-4 ($offset: 0) {
  min-width: calc(100% * (1/4) - #{$offset});
}

@mixin calcColumn-3 {
  min-width: calc(100% * (1/3) - 5px);
}

@mixin calcSplitColumn {
  min-width: calc(100% * (1/2) - 5px);
}

@mixin vertCenter {
  top: 50%;
  transform: translateY(-50%);
}

